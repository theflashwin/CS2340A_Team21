<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_200"
    android:orientation="vertical"
    tools:context=".views.InputMealFragment" >

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:text="Input a Meal"
        android:textSize="34sp" />

    <EditText
        android:id="@+id/mealNameInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Meal Name"
        android:inputType="text" />

    <EditText
        android:id="@+id/mealCaloriesInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Meal Calories"
        android:inputType="number" />

    <Button
        android:id="@+id/mealSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit" />

    <TextView
        android:id="@+id/textViewPersonal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My Personal Information:"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/textViewHeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Height: N/A"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/textViewWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weight: N/A"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/textViewGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender: N/A"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/sumCaloriesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Calories: "
        android:textSize="20sp"/>

</LinearLayout>